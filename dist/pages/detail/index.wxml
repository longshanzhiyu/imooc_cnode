<block>
    <view class="detail">
        <block wx:if="{{showReplyContent}}">
            <reply-content bindonokreplycontent="replyContent" __triggerObserer="{{ _triggerObserer }}" bindoncancelreplycontent="closeReplyContent" __fn_onOKReplyContent="{{true}}" data-e-onokreplycontent-so="this" __fn_onCancelReplyContent="{{true}}" data-e-oncancelreplycontent-so="this"></reply-content>
        </block>
        <topic-info selfPublish="{{selfPublish}}" __triggerObserer="{{ _triggerObserer }}" topicinfo="{{topicinfo}}"></topic-info>
        <replies user="{{user}}" __triggerObserer="{{ _triggerObserer }}" bindonreplytoreply="replyToReply" replies="{{replies}}" bindonadmire="admire" __fn_onReplyToReply="{{true}}" data-e-onreplytoreply-so="this" __fn_onAdmire="{{true}}" data-e-onadmire-so="this"></replies>
        <button class="replyBtn" bindtap="reply" data-e-tap-so="this">回复</button>
    </view>
</block>